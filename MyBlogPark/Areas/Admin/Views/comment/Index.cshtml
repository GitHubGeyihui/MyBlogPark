<script type="text/javascript">


    //单个删除
    function del(id) {
        if (confirm("您确定要删除吗?")) {
            $.post("/admin/comment/delete", { id: id },
                function (data) {
                    if (data == 1) {
                        window.location.href = "/admin/comment/index";
                    }
                    else {
                        alert("删除失败");
                    }
                });
        }
    }
</script>

