    <header class="am-topbar">
        <h1 class="am-topbar-brand">
            <a href="/">谷羽の博客园</a>
        </h1>

        <button class="am-topbar-btn am-topbar-toggle am-btn am-btn-sm am-btn-success am-show-sm-only"
                data-am-collapse="{target: '#doc-topbar-collapse'}">
            <span class="am-sr-only">导航切换</span> <span class="am-icon-bars"></span>
        </button>

        <div class="am-collapse am-topbar-collapse" id="doc-topbar-collapse">
            <ul class="am-nav am-nav-pills am-topbar-nav">
                <li class="am-active"><a href="/">首页</a></li>
                <li><a href="#">咨询</a></li>
                <li class="am-dropdown" data-am-dropdown>
                    <a class="am-dropdown-toggle" data-am-dropdown-toggle href="javascript:;">
                        栏目 <span class="am-icon-caret-down"></span>
                    </a>
                    <ul class="am-dropdown-content">
                        <li class="am-dropdown-header">园子栏目</li>
                        <li><a href="#">ASP.Net技术</a></li>
                        <li><a href="#">Python技术</a></li>
                        <li><a href="#">JAVA技术 </a></li>
                    </ul>
                </li>
            </ul>

            <form class="am-topbar-form am-topbar-left am-form-inline am-topbar-right" role="search">
                <div class="am-form-group">
                    <input type="text" class="am-form-field am-input-sm" placeholder="搜索文章">
                </div>
                <button type="submit" class="am-btn am-btn-default am-btn-sm">搜索</button>
                @if (LoginUser == null)
                {
                    <button type="button" class="am-btn am-btn-success am-btn-sm am-align-right" onclick="window.location.href='/home/login'">登 录</button>
                    <button type="button" class="am-btn am-btn-warning am-btn-sm am-align-right" onclick="window.location.href='/home/register'">注 册</button>

                }
                else
                {
                    if (LoginBlog == null)
                    {
                        <button type="button" class="am-btn am-btn-success am-btn-sm am-align-right" onclick="window.location.href='/admin/homes/index'">申请博客</button>

                    }
                    else
                    {
                        <button type="button" class="am-btn am-btn-success am-btn-sm am-align-right" onclick="window.location.href='/admin/homes/index'">管理</button>
                        <button type="button" class="am-btn am-btn-warning am-btn-sm am-align-right" onclick="window.location.href='/@LoginBlog.Identity'">@LoginUser.Name 的博客</button>

                    }
                }
            </form>
          
        </div>
    </header>
