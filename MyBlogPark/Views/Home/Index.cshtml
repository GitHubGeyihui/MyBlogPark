@{
    ViewBag.Title = "博客园首页";
    var articleList = ViewBag.ListArticle as List<Article>;

    var userList = ViewBag.ListUser as List<User>;

    var hostArticleList = ViewBag.HotArticleList as List<ArticleDetail>;

    var blogModel = ViewBag.Blog as List<Blog>;
}
    <div class="am-g" style="position:absolute;top:60px;">
        <div class="am-u-sm-2">
            <div class="am-panel-group">
                <section class="am-panel am-panel-default">
                    <div class="am-panel-hd">友情链接</div>
                    <ul class="am-list blog-list">
                        <li><a href="https://www.zhihu.com/" style="color:black!important">知乎</a></li>
                        <li><a href="https://www.baidu.com/" style="color:black!important">百度搜索</a></li>
                        <li><a href="https://www.bilibili.com/" style="color:black!important">哔哩哔哩动画</a></li>
                        <li><a href="https://github.com/" style="color:black!important">GitHub</a></li>
                    </ul>
                </section>
                <section class="am-panel am-panel-default">
                    <div class="am-panel-hd">推荐博客</div>
                    <ul class="am-list blog-list" >
                        <li><a href="https://www.cnblogs.com/yjlblog/p/8724881.html?utm_source=gold_browser_extension#autoid-6-0-0" style="color:black!important">YJLAugus</a></li>
                        <li><a href="http://macshuo.com/" style="color:black!important">MacTalk-池建强的随想录</a></li>
                        <li><a href="https://nianxi.net/" style="color:black!important">程序媛念茜</a></li>
                        <li><a href="http://blog.sunnyxx.com/" style="color:black!important">sunny的博客</a></li>
                    </ul>
                </section>
            </div>
        </div>
        <div class="am-u-sm-7">
            
            @for (int i = 0; i < hostArticleList.Count; i++)
            {

                <article class="blog-main">
                    <h2 class="am-article-title blog-title">
                        <a href="/@hostArticleList[i].BlogIdentity/p/@(hostArticleList[i].ID).html" style="font-size:23px;">@hostArticleList[i].Title</a>
                    </h2>
                    <h4 class="am-article-meta blog-meta" >作者 <a href="#" style="color:black!important">@hostArticleList[i].UserName</a> <span style="margin:0px 0px 0px 10px;">发表于:</span> @hostArticleList[i].AddTime.ToString("yyyy-MM-dd")  <a href="#"></a></h4>

                    <div class="am-g blog-content">
                        <div class="am-u-lg-12">
                            @hostArticleList[i].Discription
                        </div>
                    </div>
                </article>

                <hr class="am-article-divider blog-hr">
            }               
            <section>
                <ul data-am-widget="pagination" class="am-pagination am-pagination-default"></ul>
            </section>
        </div>
        <div class="am-u-sm-3">
            <div class="am-panel-group">
                <section class="am-panel am-panel-default">
                    <div class="am-panel-hd">谷羽の博客园</div>
                    <div class="am-panel-bd">
                        <p>
                            谷羽の博客园是一个基于ASP.NET MVC和EF的一个多用户博客系统。涉及知识点。有缓存 有队列.....
                        </p>
                    </div>
                </section>
                <section class="am-panel am-panel-default">
                    <div class="am-panel-hd">热门文章</div>
                    <ul class="am-list blog-list">
                        @foreach (var item in hostArticleList)
                        {
                            <li><a href="/@item.BlogIdentity/p/@(item.ID).html" style="color:black!important">@item.Title</a></li>
                        }
                    </ul>
                </section>

                <section class="am-panel am-panel-default">
                    <div class="am-panel-hd">博主排名</div>
                    <div class="am-panel-bd">
                        <ul class="am-avg-sm-4 blog-team">
                            @for (int i = 0; i < userList.Count; i++)
                            {
                                <li>
                                    <img src="~/Content/Img/1.jpg" width="70" height="70" />
                                </li>
                            }
                        </ul>
                    </div>
                </section>


            </div>
        </div>
    </div>